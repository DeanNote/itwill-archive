	@GetMapping("redirect")
	public String redirect() {
		return "redirect:/redirectServlet";
	}

	
	
	
	@GetMapping("redirectServlet")
	public String redirectServlet(HttpServletRequest request) {
		System.out.println(request.getAttribute("msg"));
		return "test2/redirect";
	}
	
	
	
	
	
	
